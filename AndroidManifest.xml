<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tn.iac.radiostreaming"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bar2"
        
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="tn.iac.radiostreaming.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tn.iac.radiostreaming.MainActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="bd.MyBase"
            android:label="@string/title_activity_my_base" >
        </activity>
        <activity
            android:name="bd.RadioChannel"
            android:label="@string/title_activity_radio_channel" >
        </activity>
        <activity
            android:name="bd.RadioChannelTable"
            android:label="@string/title_activity_radio_channel_table" >
        </activity>
        <activity
            android:name=".HelloActivity"
            android:label="@string/title_activity_hello" >
        </activity>
    </application>

</manifest>